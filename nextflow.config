/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    galantelab/precisecaller Nextflow config file
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Default config options for all compute environments
----------------------------------------------------------------------------------------
*/

// Global default params, used in configs
params {

    /*
     * Input options
     * --------------
     * Primary input definition for the pipeline, typically a samplesheet
     * describing samples, lanes and FASTQ files.
     */
    input = null


    /*
     * Reference genome and annotation
     * --------------------------------
     * Controls reference genome selection and retrieval of annotation resources.
     */
    genome            = 'GATK.GRCh38'                 // Genome key (e.g. GATK.GRCh38, hg19)
    igenomes_base     = 's3://ngi-igenomes/igenomes/' // Base path for iGenomes references
    igenomes_ignore   = false                         // Disable iGenomes lookup entirely
    save_reference    = false                         // Publish reference files to output directory
    vep_cache         = null                          // Ensembl VEP cache directory


    /*
     * Assay type and target regions
     * ------------------------------
     * Parameters describing sequencing assay characteristics.
     */
    wgs       = false  // Set to true for whole-genome sequencing data
    intervals = null   // BED file with target regions (optional for WGS)


    /*
     * Joint genotyping configuration
     * --------------------------------
     * Controls how GVCFs are aggregated prior to genotyping.
     *
     * Use GenomicsDBImport instead of CombineGVCFs
     * Recommended: true for WGS; false for WES/panel or small cohorts
     */
    use_genomicsdb = null


    /*
     * Variant filtering (SNPs and INDELs)
     * -----------------------------------
     * Custom hard-filter expressions passed to GATK VariantFiltration.
     *
     * Supported formats:
     *  - String (CLI): filters separated by '|', format <name>:<JEXL>
     *  - Map (YAML/JSON): key = filter name, value = JEXL expression
     */
    filters_snp = 'QD_filter: QD < 2.0 | FS_filter: FS > 60.0 | MQ_filter: MQ < 40.0 | SOR_filter: SOR > 3.0 | MQRankSum_filter: MQRankSum < -12.5 | ReadPosRankSum_filter: ReadPosRankSum < -8.0'
    filters_indel = 'QD_filter: QD < 2.0 | FS_filter: FS > 200.0 | SOR_filter: SOR > 10.0'


    /*
     * FASTQ splitting
     * ----------------
     * Optional splitting of large FASTQ files to increase parallelism.
     */
    split_fastq_reads = 50_000_000 // Set to 0 to disable splitting
    save_split_fastq  = false      // Publish split FASTQ files


    /*
     * UMI-tagged reads processing
     * ----------------------------
     * UMI-aware preprocessing and consensus calling.
     *
     * When enabled, standard trimming and alignment are skipped.
     */
    umi_read_structure      = null        // Read structure string; null disables UMI processing
    group_by_umi_strategy   = 'Adjacency' // GROUPREADSBYUMI strategy
    umi_file                = null        // Optional fixed list of expected UMIs
    umi_file_max_mismatches = 1           // Max mismatches between observed and expected UMI
    umi_file_min_distance   = 1           // Minimum distance to next best UMI
    umi_min_reads           = 3           // Minimum reads supporting a consensus
    umi_min_base_quality    = 45          // Mask consensus bases below this quality
    umi_max_base_error_rate = 0.2         // Maximum error rate for a consensus base


    /*
     * Read trimming and filtering
     * ----------------------------
     * FastP-based trimming and filtering.
     *
     * Ignored when UMI processing is enabled.
     */
    skip_trimming         = true  // Skip trimming and filtering entirely
    skip_adapter_trimming = false // Skip adapter trimming only
    trim_front1           = 0     // Bases to trim from 5' end of read 1
    trim_front2           = 0     // Bases to trim from 5' end of read 2
    trim_tail1            = 0     // Bases to trim from 3' end of read 1 (post trimming)
    trim_tail2            = 0     // Bases to trim from 3' end of read 2 (post trimming)
    trim_poly_g           = false // Remove poly-G tails
    trim_min_read_length  = 15    // Discard reads shorter than this length
    save_trimmed_fastq    = false // Publish trimmed FASTQ files


    /*
     * Read filtering
     * ---------------
     * Alignment-level read filtering parameters.
     */
    min_mapq = 20 // Minimum mapping quality (0 disables filtering)


    /*
     * Metrics collection
     * -------------------
     * Controls collection of alignment, coverage and recalibration metrics.
     */
    skip_alignment_metrics     = null // Skip alignment metrics
    skip_coverage_metrics      = null // Skip coverage metrics
    skip_recalibration_metrics = null // Skip base recalibration metrics
    coverage_metrics_mins      = null // Coverage thresholds (comma-separated)
    coverage_metrics_intervals = null // Coverage depth intervals (colon-separated)


    /*
     * Read group metadata
     * --------------------
     * Metadata written to BAM read group (RG) fields.
     */
    seq_center   = null       // Sequencing center (RG:CN)
    seq_platform = 'ILLUMINA' // Sequencing platform (RG:PL)


    /*
     * MultiQC reporting
     * ------------------
     * Customization of the final MultiQC report.
     */
    multiqc_config              = null     // Custom MultiQC configuration
    multiqc_title               = null     // Custom report title
    multiqc_logo                = null     // Custom logo
    max_multiqc_email_size      = '25.MB'  // Max attachment size for emails
    multiqc_methods_description = null     // Custom methods description text


    /*
     * Output, notifications and logging
     * ----------------------------------
     */
    outdir           = null    // Base output directory
    publish_dir_mode = 'copy'  // copy, symlink or move
    email            = null    // Email for pipeline notifications
    email_on_fail    = null    // Email for failure notifications
    plaintext_email  = false   // Send emails in plain text
    monochrome_logs  = false   // Disable ANSI colors in logs


    /*
     * Command-line helper flags
     * --------------------------
     */
    help        = false
    help_full   = false
    show_hidden = false
    version     = false


    /*
     * Test dataset locations
     * -----------------------
     * Used by nf-test and pipeline CI.
     */
    pipelines_testdata_base_path = 'https://raw.githubusercontent.com/nf-core/test-datasets/'
    modules_testdata_base_path   = 'https://raw.githubusercontent.com/nf-core/test-datasets/modules/data/'
    local_testdata_base_path     = 's3://bioinfohsl-tools/precisecaller/test-datasets/'


    /*
     * Configuration profile metadata
     * --------------------------------
     */
    config_profile_name        = null
    config_profile_description = null
    config_profile_contact     = null
    config_profile_url         = null


    /*
     * Custom configuration loading
     * ------------------------------
     */
    custom_config_version = 'master'
    custom_config_base    = "https://raw.githubusercontent.com/nf-core/configs/${params.custom_config_version}"


    /*
     * Parameter validation
     * ---------------------
     */
    validate_params = true
}

// Load base.config by default for all pipelines
includeConfig 'conf/base.config'

// Load assays.config
includeConfig 'conf/assays.config'

profiles {
    debug {
        dumpHashes              = true
        process.beforeScript    = 'echo $HOSTNAME'
        cleanup                 = false
        nextflow.enable.configProcessNamesValidation = true
    }
    conda {
        conda.enabled           = true
        docker.enabled          = false
        singularity.enabled     = false
        podman.enabled          = false
        shifter.enabled         = false
        charliecloud.enabled    = false
        conda.channels          = ['conda-forge', 'bioconda']
        apptainer.enabled       = false
    }
    mamba {
        conda.enabled           = true
        conda.useMamba          = true
        docker.enabled          = false
        singularity.enabled     = false
        podman.enabled          = false
        shifter.enabled         = false
        charliecloud.enabled    = false
        apptainer.enabled       = false
    }
    docker {
        docker.enabled          = true
        conda.enabled           = false
        singularity.enabled     = false
        podman.enabled          = false
        shifter.enabled         = false
        charliecloud.enabled    = false
        apptainer.enabled       = false
        docker.runOptions       = '-u $(id -u):$(id -g)'
    }
    arm {
        docker.runOptions       = '-u $(id -u):$(id -g) --platform=linux/amd64'
    }
    singularity {
        singularity.enabled     = true
        singularity.autoMounts  = true
        conda.enabled           = false
        docker.enabled          = false
        podman.enabled          = false
        shifter.enabled         = false
        charliecloud.enabled    = false
        apptainer.enabled       = false
    }
    podman {
        podman.enabled          = true
        conda.enabled           = false
        docker.enabled          = false
        singularity.enabled     = false
        shifter.enabled         = false
        charliecloud.enabled    = false
        apptainer.enabled       = false
    }
    shifter {
        shifter.enabled         = true
        conda.enabled           = false
        docker.enabled          = false
        singularity.enabled     = false
        podman.enabled          = false
        charliecloud.enabled    = false
        apptainer.enabled       = false
    }
    charliecloud {
        charliecloud.enabled    = true
        conda.enabled           = false
        docker.enabled          = false
        singularity.enabled     = false
        podman.enabled          = false
        shifter.enabled         = false
        apptainer.enabled       = false
    }
    apptainer {
        apptainer.enabled       = true
        apptainer.autoMounts    = true
        conda.enabled           = false
        docker.enabled          = false
        singularity.enabled     = false
        podman.enabled          = false
        shifter.enabled         = false
        charliecloud.enabled    = false
    }
    wave {
        apptainer.ociAutoPull   = true
        singularity.ociAutoPull = true
        wave.enabled            = true
        wave.freeze             = true
        wave.strategy           = 'conda,container'
    }

    test      { includeConfig 'conf/test.config'      }
    test_full { includeConfig 'conf/test_full.config' }
}

// Load nf-core custom profiles from different Institutions
includeConfig !System.getenv('NXF_OFFLINE') && params.custom_config_base ? "${params.custom_config_base}/nfcore_custom.config" : "/dev/null"

// Load galantelab/precisecaller custom profiles from different institutions.
// TODO nf-core: Optionally, you can add a pipeline-specific nf-core config at https://github.com/nf-core/configs
// includeConfig !System.getenv('NXF_OFFLINE') && params.custom_config_base ? "${params.custom_config_base}/pipeline/precisecaller.config" : "/dev/null"

// Set default registry for Apptainer, Docker, Podman, Charliecloud and Singularity independent of -profile
// Will not be used unless Apptainer / Docker / Podman / Charliecloud / Singularity are enabled
// Set to your registry if you have a mirror of containers
apptainer.registry    = 'quay.io'
docker.registry       = 'quay.io'
podman.registry       = 'quay.io'
singularity.registry  = 'quay.io'
charliecloud.registry = 'quay.io'

// Load igenomes.config if required
includeConfig !params.igenomes_ignore ? 'conf/igenomes.config' : 'conf/igenomes_ignored.config'

// Export these variables to prevent local Python/R libraries from conflicting with those in the container
// The JULIA depot path has been adjusted to a fixed path `/usr/local/share/julia` that needs to be used for packages in the container.
// See https://apeltzer.github.io/post/03-julia-lang-nextflow/ for details on that. Once we have a common agreement on where to keep Julia packages, this is adjustable.

env {
    PYTHONNOUSERSITE = 1
    R_PROFILE_USER   = "/.Rprofile"
    R_ENVIRON_USER   = "/.Renviron"
    JULIA_DEPOT_PATH = "/usr/local/share/julia"
}

// Set bash options
process.shell = [
    "bash",
    "-e",      // Exit if a tool returns a non-zero status/exit code
    "-u",      // Treat unset variables and parameters as an error
    "-C",      // No clobber - prevent output redirection from overwriting files
    "-o",
    "pipefail" // Returns the status of the last command to exit
]

// Disable process selector warnings by default. Use debug profile to enable warnings.
nextflow.enable.configProcessNamesValidation = false

def trace_timestamp = new java.util.Date().format( 'yyyy-MM-dd_HH-mm-ss')
timeline {
    enabled = true
    file    = "${params.outdir}/pipeline_info/execution_timeline_${trace_timestamp}.html"
}
report {
    enabled = true
    file    = "${params.outdir}/pipeline_info/execution_report_${trace_timestamp}.html"
}
trace {
    enabled = true
    file    = "${params.outdir}/pipeline_info/execution_trace_${trace_timestamp}.txt"
}
dag {
    enabled = true
    file    = "${params.outdir}/pipeline_info/pipeline_dag_${trace_timestamp}.html"
}

manifest {
    name            = 'galantelab/precisecaller'
    author          = """Thiago L. A. Miller / Pedro A. F. Galante"""
    homePage        = 'https://github.com/galantelab/precisecaller'
    description     = """A complete, scalable, easy-to-use, open-source platform for genomic variant detection in Oncology and Precision Medicine"""
    mainScript      = 'main.nf'
    nextflowVersion = '!>=24.04.2'
    version         = '1.5.0dev'
    doi             = ''
}

// Nextflow plugins
plugins {
    id 'nf-schema@2.1.1' // Validation of pipeline parameters and creation of an input channel from a sample sheet
}

validation {
    defaultIgnoreParams = ["genomes"]
    help {
        enabled = true
        command = "nextflow run $manifest.name -profile <docker/singularity/.../institute> --input samplesheet.csv --outdir <OUTDIR>"
        fullParameter = "help_full"
        showHiddenParameter = "show_hidden"
    }
}

// Load modules.config for DSL2 module specific options
includeConfig 'conf/modules/alignment.config'
includeConfig 'conf/modules/alignment_metrics.config'
includeConfig 'conf/modules/bqsr.config'
includeConfig 'conf/modules/coverage_metrics.config'
includeConfig 'conf/modules/genotype.config'
includeConfig 'conf/modules/haplotypecaller.config'
includeConfig 'conf/modules/mapq.config'
includeConfig 'conf/modules/markduplicates.config'
includeConfig 'conf/modules/merge.config'
includeConfig 'conf/modules/prepare_genome.config'
includeConfig 'conf/modules/prepare_intervals.config'
includeConfig 'conf/modules/qc.config'
includeConfig 'conf/modules/selectvariants.config'
includeConfig 'conf/modules/sort.config'
includeConfig 'conf/modules/split.config'
includeConfig 'conf/modules/trim.config'
includeConfig 'conf/modules/umi.config'
includeConfig 'conf/modules/variantannotation.config'
includeConfig 'conf/modules/variantfiltration.config'
includeConfig 'conf/modules/variantnormalization.config'
