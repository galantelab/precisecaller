// nf-core subworkflows test prepare_genome
nextflow_workflow {
    name "Test Subworkflow PREPARE_GENOME"
    script "../main.nf"
    workflow "PREPARE_GENOME"

    tag "subworkflows"
    tag "subworkflows_"
    tag "subworkflows/prepare_genome"

    test("fasta - prepare fasta reference") {
        config "./nextflow.config"

        when {

            workflow {
                """
                input[0]  = params.local_testdata_base_path + 'references/Homo_sapiens/Gencode/hg38_chr22q12.1/Sequence/WholeGenomeFasta/genome.fa'
                input[1]  = null
                input[2]  = null
                input[3]  = null
                input[4]  = params.local_testdata_base_path + 'data/Homo_sapiens/Simulations/dbsnp/dbsnp.vcf'
                input[5]  = null
                input[6]  = params.local_testdata_base_path + 'data/Homo_sapiens/Simulations/known_sites/known_indels.vcf'
                input[7]  = null
                input[8]  = params.local_testdata_base_path + 'data/Homo_sapiens/Simulations/known_sites/known_snps.vcf'
                input[9]  = null
                input[10] = null
                input[11] = params.vep_cache_version
                input[12] = params.vep_genome
                input[13] = params.vep_species
                """
            }
        }

        then {
            assertAll(
                { assert workflow.success},
                { assert snapshot(workflow.out).match()}
            )
        }
    }

    test("fasta.gz - prepare fasta reference") {
        config "./nextflow.config"

        when {

            workflow {
                """
                input[0]  = params.local_testdata_base_path + 'references/Homo_sapiens/Gencode/hg38_chr22q12.1/Sequence/WholeGenomeFasta/genome.fa.gz'
                input[1]  = null
                input[2]  = null
                input[3]  = null
                input[4]  = params.local_testdata_base_path + 'data/Homo_sapiens/Simulations/dbsnp/dbsnp.vcf.gz'
                input[5]  = params.local_testdata_base_path + 'data/Homo_sapiens/Simulations/dbsnp/dbsnp.vcf.gz.tbi'
                input[6]  = params.local_testdata_base_path + 'data/Homo_sapiens/Simulations/known_sites/known_indels.vcf.gz'
                input[7]  = params.local_testdata_base_path + 'data/Homo_sapiens/Simulations/known_sites/known_indels.vcf.gz.tbi'
                input[8]  = params.local_testdata_base_path + 'data/Homo_sapiens/Simulations/known_sites/known_snps.vcf.gz'
                input[9]  = params.local_testdata_base_path + 'data/Homo_sapiens/Simulations/known_sites/known_snps.vcf.gz.tbi'
                input[10] = params.local_testdata_base_path + 'references/Caenorhabditis_elegans/vep_cache/115_WBcel235/'
                input[11] = params.vep_cache_version
                input[12] = params.vep_genome
                input[13] = params.vep_species
                """
            }
        }

        then {
            assertAll(
                { assert workflow.success},
                { assert snapshot(workflow.out).match()}
            )
        }
    }

}
