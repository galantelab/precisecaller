nextflow_workflow {

    name "Test Subworkflow BAM_VARIANT_CALLING_HAPLOTYPECALLER_GATK"
    script "../main.nf"
    workflow "BAM_VARIANT_CALLING_HAPLOTYPECALLER_GATK"

    tag "subworkflows"
    tag "subworkflows_"
    tag "subworkflows/bam_variant_calling_haplotypecaller_gatk"
    tag "gatk4"
    tag "gatk4/haplotypecaller"

    test("sarscov2 - bam") {
        when {
            workflow {
                """
                input[0] = Channel.of([[id:'test'], file(params.modules_testdata_base_path + 'genomics/sarscov2/illumina/bam/test.paired_end.sorted.bam', checkIfExists: true)])
                input[1] = Channel.of([[id:'test'], file(params.modules_testdata_base_path + 'genomics/sarscov2/illumina/bam/test.paired_end.sorted.bam.bai', checkIfExists: true)])
                input[2] = Channel.fromPath(params.modules_testdata_base_path + 'genomics/sarscov2/genome/bed/test.bed', checkIfExists: true).first()
                input[3] = Channel.value([[id:'fasta'], file(params.modules_testdata_base_path + 'genomics/sarscov2/genome/genome.fasta', checkIfExists: true)])
                input[4] = Channel.value([[id:'fai'], file(params.modules_testdata_base_path + 'genomics/sarscov2/genome/genome.fasta.fai', checkIfExists: true)])
                input[5] = Channel.value([[id:'dict'], file(params.modules_testdata_base_path + 'genomics/sarscov2/genome/genome.dict', checkIfExists: true)])
                input[6] = Channel.value([[id:'dbsnp'], file(params.modules_testdata_base_path + 'genomics/sarscov2/illumina/vcf/test.vcf.gz', checkIfExists: true)])
                input[7] = Channel.value([[id:'dbsnp'], file(params.modules_testdata_base_path + 'genomics/sarscov2/illumina/vcf/test.vcf.gz.tbi', checkIfExists: true)])
                """
            }
        }

        then {
            assertAll(
                { assert workflow.success },
                { assert snapshot(
                    path(workflow.out.vcf[0][1]).vcf.variantsMD5,
                    file(workflow.out.tbi[0][1]).name,
                    workflow.out.versions
                    ).match()
                }
            )
        }

    }

}
