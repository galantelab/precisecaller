/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Nextflow config file for running minimal tests
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Defines input files and everything required to run a fast and simple pipeline test.

    Use as follows:
        nextflow run galantelab/precisecaller -profile test,<docker/singularity> --outdir <OUTDIR>

----------------------------------------------------------------------------------------
*/

/*
 * WORKAROUND (nf-test + Docker)
 *
 * When running nf-test with Docker, Nextflow may attempt to re-launch
 * `.command.run` directly inside the container (e.g. `.command.run nxf_trace`)
 * without invoking `bash`. Since `.command.run` is not executable by default,
 * this leads to:
 *
 *   /bin/bash: .command.run: Permission denied
 *
 * Making `.command.run` executable resolves the issue.
 *
 * This is a known edge case affecting nf-test / container execution only.
 * It does NOT affect normal pipeline execution.
 */
process {
    beforeScript = 'chmod +x .command.run'

    resourceLimits = [
        cpus: 4,
        memory: '4.GB',
        time: '1.h'
    ]
}

params {
    config_profile_name        = 'Test profile'
    config_profile_description = 'Minimal test dataset to check pipeline function'

    // Input data
    // TODO nf-core: Specify the paths to your test data on nf-core/test-datasets
    // TODO nf-core: Give any required params for the test so that command line flags are not needed
    input  = params.pipelines_testdata_base_path + 'viralrecon/samplesheet/samplesheet_test_illumina_amplicon.csv'

    // Genome references
    genome = 'R64-1-1'
}
