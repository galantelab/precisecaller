nextflow_process {

    name "Test Process CREATE_INTERVALS"
    script "../main.nf"
    process "CREATE_INTERVALS"

    tag "modules"
    tag "modules_"
    tag "gawk"
    tag "create_intervals"

    test("CREATE_INTERVALS - fai input") {

        when {
            process {
                """
                input[0] = file(params.local_testdata_base_path + 'references/Homo_sapiens/Gencode/hg38_chr22q12.1/Sequence/WholeGenomeFasta/genome.fa.fai', checkIfExists: true)
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

    test("CREATE_INTERVALS - interval_list input") {

        when {
            process {
                """
                input[0] = file(params.local_testdata_base_path + 'data/Homo_sapiens/Simulations/targets/targets.interval_list', checkIfExists: true)
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

    test("CREATE_INTERVALS - intervals input") {

        when {
            process {
                """
                input[0] = file(params.local_testdata_base_path + 'data/Homo_sapiens/Simulations/targets/targets.intervals', checkIfExists: true)
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

    test("CREATE_INTERVALS - list input") {

        when {
            process {
                """
                input[0] = file(params.local_testdata_base_path + 'data/Homo_sapiens/Simulations/targets/targets.list', checkIfExists: true)
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

    test("CREATE_INTERVALS - invalid extension") {

        when {
            process {
                """
                input[0] = file(params.local_testdata_base_path + 'data/Homo_sapiens/Simulations/targets/targets_invalid.txt', checkIfExists: true)
                """
            }
        }

        then {
            assertAll(
                { assert !process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

    test("CREATE_INTERVALS - stub") {

        options "-stub"

        when {
            process {
                """
                input[0] = file(params.local_testdata_base_path + 'references/Homo_sapiens/Gencode/hg38_chr22q12.1/Sequence/WholeGenomeFasta/genome.fa.fai', checkIfExists: true)
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

}
